<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tareas" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etiquetaelementos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de ruta" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="text">

        </EditText>

        <requestFocus />

        <TextView
            android:id="@+id/etiquetacantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Km recorridos" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/botonguardar"
            android:layout_width="385dp"
            style="@style/colorboton"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:background="#8BC34A"
            android:text="@string/botonguardar" />

        <Button
            android:id="@+id/button1"
            android:layout_width="391dp"
            style="@style/colorboton"
            android:layout_height="42dp"
            android:layout_marginTop="0dp"
            android:background="#FFEB3B"
            android:text="@string/botonupdate" />

        <Button
            android:id="@+id/button2"
            android:layout_width="395dp"
            style="@style/colorboton"
            android:layout_height="39dp"
            android:layout_marginTop="0dp"
            android:background="#FF9800"
            android:text="@string/botondelete" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etiquetamostrar" />

        <Button
            android:id="@+id/button4"
            android:layout_width="133dp"
            style="@style/colorboton"
            android:layout_height="67dp"
            android:layout_marginTop="0dp"
            android:background="#FF5722"
            android:text="@string/botonsalir" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de rutas" />

        <Button
            android:id="@+id/button3"
            android:layout_width="114dp"
            style="@style/colorboton"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:background="#03A9F4"
            android:text="@string/botonmostrar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etiquetamostrar" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            style="@style/colorboton"
            android:layout_height="wrap_content"
            android:text="@string/etiquetamostrar" />

    </LinearLayout>

</RelativeLayout>